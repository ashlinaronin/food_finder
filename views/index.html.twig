<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
        <link rel='stylesheet' href='/styles/styles.css' />
        <title>Food Finder </title>
    </head>
    <body>
        <div class="container">
            <h1>Bienvenidos to the food finder!</h1>

            <p>Create a new Cuisine:</p>

            <form action="/cuisines" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input id="name" name="name" type="text" required>

                </div>
                <hr>
                        <!-- spicy radio button -->
                <div class="form-group">
                    <label for='spicy'>Is it spicy?</label>
                        <br>
                    <input type="radio" name="spicy" value="1" required>
                        I am a spicy food!! enjoy me!! <br>
                    <input type="radio" name="spicy" value="0" required>
                        Im not a spicy! sorry!! <br>
                </div>
                <!-- end spicy radio button section -->
                <hr>
                <div class="form-group" id="price-slider">
                    <label for="price">Cuisine price</label>
                    <input id="price" name="price" type="range" min="1" max="5" step="1" oninput="outputUpdate(value)">
                    <!-- <output for="fader" id="currentPrice">$5</output> -->
                    <div id="dollars"></div>
                    <script>
                        function outputUpdate(price) {
                            var gifHtml = "";
                            for (i = 0; i < price; i++) {
                                gifHtml += '<img src="/img/dollar.gif" width="48" height="48" alt="dolla dolla bill yall"/>'
                            }
                            document.getElementById("dollars").innerHTML = gifHtml;
                        }
                    </script>
                    <hr>
                </div>









                <button type="submit" class="btn btn-success">Add Cuisine</button>
            </form>

            {% if cuisines is not empty %}
                    <p>Here are all your cuisines:</p>
                    <ul>
                        {% for cuisine in cuisines %}
                            <li><a href="/cuisines/{{ cuisine.getId }}">{{ cuisine.getName }}</a></li>
                        {% endfor %}
                    </ul>
            {% else %}
                <p>There are no cuisines yet!</p>
            {% endif %}

            <form action="/" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit">Delete everything I'm sick of this food finder</button>
            </form>
        </div>

    </body>
</html>
